<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:background="@mipmap/b">




    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_below="@+id/mainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"/>

    <EditText
        android:id="@+id/getName"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="1dp"
        android:hint="enter name"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/email"
        android:layout_below="@+id/getName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email"/>

    <EditText
        android:id="@+id/getEmail"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="1dp"
        android:hint="enter email"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter phone"
        android:layout_below="@+id/getEmail"/>

    <EditText
        android:id="@+id/getPhone"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="1dp"
        android:hint="enter phone Number" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter address"
        android:layout_below="@+id/getPhone"/>

    <EditText
        android:id="@+id/getAddress"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:layout_below="@+id/address"
        android:layout_marginTop="1dp"
        android:hint="enter Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submit"
        android:layout_below="@+id/getAddress"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>